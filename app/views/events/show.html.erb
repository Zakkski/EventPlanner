<div class="player-list">
  <% @players.each do |player| %>
    <div class="player-item">
      <div class="player-icon">
        <%= image_tag "flags/#{player.country_code}.png" %>
        <div class="place-circle">
          <p>1</p>
        </div>
      </div>
      <div class="player-info">
        <h3><%= player.name %>  <span class="small-faded"><%= player.title %></span></h3>
        <h3 class="small-faded score-info">Score: <%= player.score %>pts</h3>
      </div>
    </div>
  <% end %>
</div>


<%= form_for(@new_player) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.select :country_code, @countries %>
  <%= f.hidden_field :event_id, value: @event.id  %>
  <%= f.submit "Add" %>
<% end %>

<% if @event.user == current_user %>
  <%= link_to "Open/Close", @event, method: :patch %>
  <%= link_to "Delete Event", @event, method: :delete %>
<% end %>
